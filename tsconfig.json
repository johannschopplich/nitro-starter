{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "paths": {
      "~/*": ["./*"],
      "#nitro": ["./node_modules/nitropack/dist/runtime/index"]
    },
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,

    /* Linting */
    "strict": true
  },
  "include": ["./.nitro/types/nitro.d.ts", "**/*.ts"]
}
