{
  "name": "nitro-starter",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.12.1",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "dev": "nitro dev",
    "build": "nitro build",
    "preview": "node .output/server/index.mjs",
    "test": "vitest",
    "test:run": "vitest --run --pool=forks",
    "test:types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,yml}\" --write",
    "prepare": "simple-git-hooks && nitro prepare"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.4.5",
    "eslint": "^8.55.0",
    "lint-staged": "^15.2.0",
    "nitropack": "^2.8.1",
    "prettier": "^3.1.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "zod": "^3.22.4"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "**/*.ts": "eslint --cache"
  }
}
