{
  "name": "nitro-starter",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "dev": "nitro dev",
    "build": "nitro build",
    "preview": "node .output/server/index.mjs",
    "test": "vitest",
    "test:run": "vitest --run --no-threads",
    "test:types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier \"**/*.{css,html,json,md,ts,tsx,yml}\" --write",
    "prepare": "simple-git-hooks && nitro prepare"
  },
  "lint-staged": {
    "**/*.ts": "eslint --cache --ignore-path .gitignore"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@byjohann/eslint-config": "^0.3.0",
    "eslint": "^8.54.0",
    "lint-staged": "^15.1.0",
    "nitropack": "^2.7.2",
    "prettier": "^3.1.0",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "zod": "^3.22.4"
  }
}
